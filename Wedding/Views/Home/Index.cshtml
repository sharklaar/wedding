@{
    ViewBag.Title = "Home Page";
}
@model Wedding.Models.GuestList

<div class="jumbotron home-page">
    <h1>Shark and Natalie are Getting Married...!</h1>
    <h2 class="lead">That's right, Natalie will be becoming a Daffern very soon...</h2>
    <h2 class="lead">On your invite, you'll have been given a username - enter your username in the box below and click 'RSVP!'</h2>
    @using (Html.BeginForm("Rsvp", "Home", FormMethod.Post, new { @Class = "usernameForm" }))
    {
        @Html.TextBoxFor(m => m.Username, new { @placeholder = "Enter your username here" })
        <input type="submit" value="RSVP!"/>
    }
</div>
